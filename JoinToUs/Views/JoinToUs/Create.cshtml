<h1>Create User for JoinToUs</h1>

<hr />

<div class="row">
    <div class="col-md-4">
        <form action="/JoinToUs/Create" method="post">
            <div class="form-group mb-3">
                <label class="control-label" for="Username">Username</label>
                <input class="form-control" type="text" id="Username" name="User.Username" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label" for="Email">Email</label>
                <input class="form-control" type="text" id="Email" name="User.Email" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label" for="PhoneNumber">PhoneNumber</label>
                <input class="form-control" type="text" id="PhoneNumber" name="User.PhoneNumber" />
            </div>

            <div class="form-group mb-3">
                <label class="control-label" for="Password">Password</label>
                <input class="form-control" type="password" id="Password" name="Password.PasswordHash" />
            </div>

            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>